# Figure out where G2PILOT is installed
G2PILOT_REPO="$(cd `dirname $0`/..; pwd)"

CLASSPATH=$("$G2PILOT_REPO"/bin/compute-g2pilot-classpath.sh)
G2PILOT_JARS=$("$G2PILOT_REPO"/bin/compute-g2pilot-jars.sh)

# Find the G2PILOT CLI jar
num_versions=$(ls "$G2PILOT_REPO"/target/appassembler/repo/net/fnothaft/g2pilot | wc -l)
if [ "$num_versions" -eq "0" ]; then
  echo "Failed to find g2pilot jar in $G2PILOT_REPO/target/appassembler/repo/net/fnothaft/g2pilot"
  echo "You need to build g2pilot before running this program."
  exit 1
fi
if [ "$num_versions" -gt "1" ]; then
  versions_list=$(ls "$G2PILOT_REPO"/target/appassembler/repo/net/fnothaft/g2pilot)
  echo "Found multiple g2pilot versions in $G2PILOT_REPO/target/appassembler/repo/net/fnothaft/g2pilot:"
  echo "$versions_list"
  echo "Please remove all but one."
  exit 1
fi
G2PILOT_CLI_JAR=$(ls "$G2PILOT_REPO"/target/appassembler/repo/net/fnothaft/g2pilot/*/g2pilot-*.jar)

if [ -z "$SPARK_HOME" ]; then
  echo "Attempting to use 'spark-submit' on default path; you might need to set SPARK_HOME"
  SPARK_SUBMIT=spark-submit
else
  SPARK_SUBMIT="$SPARK_HOME"/bin/spark-submit
fi

# submit the job to Spark
"$SPARK_SUBMIT" \
  --class net.fnothaft.g2pilot.G2Pilot \
  --conf spark.serializer=org.apache.spark.serializer.KryoSerializer \
  --conf spark.kryo.registrator=net.fnothaft.g2pilot.G2PilotKryoRegistrator \
  --conf spark.kryoserializer.buffer.mb=4 \
  --conf spark.kryo.referenceTracking=true \
  --conf spark.executor.memory=${G2PILOT_EXECUTOR_MEMORY:-4g} \
  ${G2PILOT_OPTS:- } \
  --driver-memory ${G2PILOT_DRIVER_MEMORY:-4g} \
  --jars "$G2PILOT_JARS" \
  "$G2PILOT_CLI_JAR" \
  "$@"
